<h1>Songs Index</h1>
<%= link_to "New Song", new_song_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Genre</th>
      <th>Artist</th>
      <th>Released Year</th>
    </tr>
  </thead>
  <tbody>
    <% @songs.each do |song| %>
    <tr>
      <td><%= song.title %></td>
      <td><%= song.genre %></td>
      <td><%= song.artist_name %></td>
      <td><%= song.release_year %></td>
	  <td><%= link_to "Edit Song", edit_song_path(song) %></td>
	  <td><%= button_to "Delete Song", song_path(song), method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
    <% end %>
  </tbody>
</table> 